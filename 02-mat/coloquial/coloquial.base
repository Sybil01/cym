filters:
  and:
    - file.folder == "02-mat/coloquial"
    - file.ext != "base"
views:
  - type: cards
    name: Table
    order:
      - file.name
      - person
      - year
      - tags
    sort:
      - property: year
        direction: ASC
    image: note.img
    cardSize: 300
    imageAspectRatio: 0.45
